# ANT CLI Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (for OpenAI provider)
OPENAI_API_KEY=

# LM Studio Base URL (for local models)
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# Claude API Key (if using Claude CLI)
CLAUDE_API_KEY=

# GitHub Copilot Token (if using Copilot CLI)
COPILOT_TOKEN=

# WhatsApp Settings
# WHATSAPP_SESSION_DIR=./.ant/whatsapp

# Memory Settings
# MEMORY_SQLITE_PATH=./.ant/memory.sqlite

# Logging
# LOG_LEVEL=info
# LOG_FILE_LEVEL=trace

# UI Settings
# UI_PORT=5117
# UI_HOST=127.0.0.1

# Gateway Settings
# GATEWAY_PORT=18789
# GATEWAY_HOST=127.0.0.1

# Scheduler
# SCHEDULER_TIMEZONE=UTC
