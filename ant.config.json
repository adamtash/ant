{
  "workspaceDir": "~",
  "providers": {
    "default": "codex",
    "items": {
      "lmstudio": {
        "type": "openai",
        "baseUrl": "http://localhost:1234/v1",
        "apiKey": "",
        "model": "zai-org/glm-4.7-flash",
        "embeddingsModel": "text-embedding-nomic-embed-text-v1.5"
      },
      "codex": {
        "type": "cli",
        "cliProvider": "codex",
        "model": "gpt-5.2-codex",
        "args": [
          "exec",
          "--output-last-message",
          "{output}",
          "--color",
          "never",
          "--skip-git-repo-check",
          "-"
        ]
      },
      "copilot": {
        "type": "cli",
        "cliProvider": "copilot",
        "model": "gpt-5-mini",
        "args": [
          "--yolo",
          "--no-ask-user",
          "--silent",
          "--no-color",
          "--allow-all-tools"
        ]
      },
      "kimi": {
        "type": "cli",
        "cliProvider": "kimi",
        "model": "kimi-k2",
        "command": "kimi",
        "args": [
          "--yolo"
        ],
        "timeoutMs": 1200000
      }
    },
    "fallbackChain": [
      "copilot",
      "kimi",
      "lmstudio"
    ]
  },
  "routing": {
    "chat": "codex",
    "tools": "codex",
    "embeddings": "lmstudio",
    "parentForCli": "codex"
  },
  "ui": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 5117,
    "autoOpen": true,
    "openUrl": "http://127.0.0.1:5117",
    "staticDir": "/Users/a/Projects/ant-cli/ui/dist"
  },
  "whatsapp": {
    "sessionDir": "./.ant/whatsapp",
    "respondToGroups": false,
    "mentionOnly": true,
    "botName": "ant",
    "respondToSelfOnly": true,
    "allowSelfMessages": true,
    "resetOnLogout": true,
    "typingIndicator": true,
    "mentionKeywords": [
      "ant"
    ],
    "ownerJids": []
  },
  "memory": {
    "enabled": true,
    "indexSessions": true,
    "sqlitePath": "./.ant/memory.sqlite",
    "embeddingsModel": "qwen3-embedding-0.6b-dwq"
  },
  "agent": {
    "systemPrompt": "",
    "toolLoop": {
      "timeoutPerIterationMs": 1200000
    }
  },
  "subagents": {
    "enabled": true
  },
  "cliTools": {
    "enabled": true,
    "timeoutMs": 1200000,
    "providers": {
      "codex": {
        "command": "codex",
        "args": []
      },
      "copilot": {
        "command": "copilot",
        "args": []
      },
      "claude": {
        "command": "claude",
        "args": []
      },
      "kimi": {
        "command": "kimi",
        "args": [
          "--yolo"
        ]
      }
    }
  },
  "scheduler": {
    "enabled": true,
    "storePath": "./.ant/jobs.json",
    "timezone": "UTC"
  },
  "monitoring": {
    "enabled": true,
    "retentionDays": 30,
    "alertChannels": [
      "whatsapp"
    ],
    "criticalErrorThreshold": 5
  },
  "gateway": {
    "enabled": true,
    "port": 18789,
    "host": "127.0.0.1"
  },
  "logging": {
    "level": "debug",
    "fileLevel": "trace",
    "filePath": "./.ant/ant.log"
  },
  "mainAgent": {
    "enabled": true,
    "intervalMs": 300000,
    "dutiesFile": "AGENT_DUTIES.md"
  },
  "runtime": {
    "restart": {
      "command": "npm",
      "args": [
        "run",
        "dev",
        "--",
        "run",
        "-c",
        "ant.config.json"
      ]
    }
  }
}